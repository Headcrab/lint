{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint: Standard (golangci-lint)",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["run", "."],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Lint: Unused Interfaces",
      "type": "shell",
      "command": "./unusedintf.exe",
      "args": ["./..."],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "dependsOn": "Build: unusedintf"
    },
    {
      "label": "Build: unusedintf",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "unusedintf.exe", "."],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Lint: All",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Lint: Standard (golangci-lint)",
        "Lint: Unused Interfaces"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
